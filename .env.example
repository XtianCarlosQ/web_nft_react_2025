# Admin credentials for /adminx login (do NOT commit .env)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-strong

# JWT secret for signing cookies (use a long random string)
JWT_SECRET=replace-with-a-strong-random-secret

# GitHub persistence (repo in owner/name format)
GITHUB_REPO=your-github-username/web_nft_react_2025
GITHUB_BRANCH=main
GITHUB_TOKEN=ghp_xxx # fine-grained PAT with repo:contents write

# Path to services content in the repo
SERVICES_PATH=public/content/services.json

# For local HTTP dev, allow cookies without Secure flag by setting false
# On Vercel/HTTPS, omit or set to true
COOKIE_SECURE=false

# Enable local API mock in Vite dev server (no need for `vercel dev`)
# Set to true for local-only testing; omit in production
MOCK_API=true
